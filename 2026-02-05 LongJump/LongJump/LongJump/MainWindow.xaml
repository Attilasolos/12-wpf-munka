<Window x:Class="LongJump.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongJump"
        mc:Ignorable="d"
        Title="Távolugrás" Height="450" Width="800" FontSize="16" Loaded="Window_Loaded" KeyDown="Window_KeyDown">
    <Grid Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox Header="Eredmények rögzítése">
            <WrapPanel>
                <Label Content="Versenyző: "/>
                <ComboBox Name="cboCompetitor" Width="200" SelectionChanged="cboCompetitor_SelectionChanged" />
                <Label Content="Következő kísérlet" Margin="20 0 0 0"/>
                <Label Content="3" Name="LblnextAttempt" FontWeight="Bold"/>
                <Label Content="Távolság: " Margin="20 0 0 0"/>
                <TextBox Name="txtdistance" Width="48"/>
                <Label Content="m"/>
                <Button Name="btnSave" Content="Mentés" Margin="20 0 0 0" Click="btnSave_Click"/>
            </WrapPanel>
        </GroupBox>
        <DataGrid Name="grdResults" Grid.Row="1" Margin="0 10 0 10" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="név" Width="200" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="1" Width="60" Binding="{Binding Attempts[0]}"/>
                <DataGridTextColumn Header="2" Width="60" Binding="{Binding Attempts[1]}"/>
                <DataGridTextColumn Header="3" Width="60" Binding="{Binding Attempts[2]}"/>
                <DataGridTextColumn Header="4" Width="60" Binding="{Binding Attempts[3]}"/>
                <DataGridTextColumn Header="5" Width="60" Binding="{Binding Attempts[4]}"/>
                <DataGridTextColumn Header="6" Width="60" Binding="{Binding Attempts[5]}"/>
                </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
