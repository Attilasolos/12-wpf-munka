<Window x:Class="LongJump.Entrieswindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LongJump"
        mc:Ignorable="d"
        Title="Entrieswindow" Height="450" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox Name="lstNames"/>
        <WrapPanel Name="PanelButtons" Grid.Row="1" HorizontalAlignment="Center" Margin="0 10 0 0">
            <Button Name="btnNew" Content="Új" Width="80" Height="24" Click="btnNew_Click"/>
            <Button Name="btnModify" Content="Módosítás" Width="80" Height="24" Margin="10 0 10 0" Click="btnModify_Click"/>
            <Button Name="btDelete" Content="Törlés" Width="80" Height="24" Click="btDelete_Click"/>
            
        </WrapPanel>
        <WrapPanel Name="panelEdit" Grid.Row="1" Margin="0 10 0 0" Visibility="Collapsed">
            <TextBox Name="txtName" Width="240"/>
            <Label FontFamily="Wingdings" Content="ü" Foreground="Green" VerticalContentAlignment="Center" MouseLeftButtonDown="LabelOk_Click"/>
            <Label Content="O" FontFamily="Wingdings 2" Foreground="red" VerticalContentAlignment="Center" MouseLeftButtonDown="LabelCancel_Click"/>
        </WrapPanel>
    </Grid>
</Window>
