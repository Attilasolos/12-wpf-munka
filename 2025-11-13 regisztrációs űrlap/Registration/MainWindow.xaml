<Window x:Class="Registration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registration"
        mc:Ignorable="d"
        Title="Regisztráció" Height="300" Width="500" FontSize="16"
        MinHeight="300" MinWidth="500">
    <Grid Margin="12" MaxWidth="600" MaxHeight="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Content="Regisztráció" FontSize="24" FontWeight="Bold" 
               Grid.ColumnSpan="2" HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>

        <Label Content="Név:" FontWeight="Bold" Grid.Row="1" Grid.Column="0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

        <Label Content="Jelszó:" FontWeight="Bold" Grid.Row="2" Grid.Column="0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

        <Label Content="Születési dátum:" FontWeight="Bold" Grid.Row="3" Grid.Column="0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

        <Label Content="Nem:" FontWeight="Bold" Grid.Row="4" Grid.Column="0"
               HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>

        <TextBox Name="txtName" Grid.Row="1" Grid.Column="1"  
                 HorizontalContentAlignment="left" VerticalAlignment="Center" TextChanged="txtName_TextChanged" BorderBrush="#FFABADB3"/>
        
        <PasswordBox Name="pwdPassword" Grid.Row="2" Grid.Column="1" 
                 HorizontalContentAlignment="left" VerticalAlignment="Center"/>

        <DatePicker Name="dtpBorn" Grid.Row="3" Grid.Column="1"
                    Width="140"
                    HorizontalAlignment="left" VerticalAlignment="Center"/>

        <WrapPanel Grid.Row="4" Grid.Column="1" VerticalAlignment="Center">
            <RadioButton Name="rbFemale" Content="Nő" VerticalContentAlignment="Center" 
                         Margin="0 0 20 0"/>
            <RadioButton Name="rbMale" Content="Férfi" VerticalContentAlignment="Center"/>
        </WrapPanel>

        <Button Name="btnRegistration" Content="Regisztrál" Grid.Row="5" Grid.ColumnSpan="2"
                Margin="20 0 20 0" Height="32" Click="btnRegistration_Click"/>

        <Label Name="lblErrorMsg" Grid.Row="6" Grid.ColumnSpan="2" 
               FontSize="12" HorizontalContentAlignment="Center" 
               Foreground="Red"/>
    </Grid>
</Window>
