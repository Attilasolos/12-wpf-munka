<Window x:Class="FeleloSorsolo.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeleloSorsolo"
        mc:Ignorable="d"
        Title="Adatok megadása" Height="200" Width="500" FontSize="16" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Tanuló neve:" VerticalAlignment="Center"/>
        <Label Content="Fotó elérési útja:" VerticalAlignment="Center" Grid.Row="1"/>

        <TextBox Name="txtName" Grid.Column="1" Height="24" Grid.ColumnSpan="2" />
        <TextBox Name="txtPhotoPath" Grid.Column="1" Grid.Row="1" Height="24"/>
        <!--<Button Name="btnBrowse" Width="24" Height="24">
            <Image Source="/Icons/open-icon.png"/>
        </Button>-->
        <Image Source="/Icons/open-icon.png" Width="24" Height="24" 
               Name="imgBrowse" Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="imgBrowse_MouseLeftButtonDown"/>

        <WrapPanel Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnSave" Content="Mentés" Width="100" Height="30" Margin="10 0 10 0" Click="btnSave_Click"/>
            <Button Name="btnCancel" Content="Mégsem" Width="100" Height="30"  Margin="10 0 10 0" Click="btnCancel_Click"/>
        </WrapPanel>
    </Grid>
</Window>
