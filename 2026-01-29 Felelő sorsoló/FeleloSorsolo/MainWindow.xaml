<Window x:Class="FeleloSorsolo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeleloSorsolo"
        mc:Ignorable="d"
        Title="Felelő sorsoló" Height="450" Width="800" FontSize="16"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <ListBox Name="lstNames" Grid.RowSpan="2"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnNew" Content="Új" Width="100" Height="30" Margin="10 0 10 0" Click="btnNew_Click"/>
            <Button Name="btnModify" Content="Módosítás" Width="100" Height="30"  Margin="10 0 10 0" Click="btnModify_Click"/>
            <Button Name="btnDelete" Content="Törlés" Width="100" Height="30"  Margin="10 0 10 0" Click="btnDelete_Click"/>
        </StackPanel>

        <Button Name="btnRoll" Content="Sorsolás" Grid.Column="1" Width="300" Height="50" 
                FontSize="32" FontWeight="Bold" Click="btnRoll_Click"/>

        <StackPanel Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Center">
            <Image Name="imgPhoto" Width="140" Height="210" />
            <Label Name="lblName" Content="tanuló neve" HorizontalAlignment="Center" 
                   FontSize="24" FontWeight="Bold" Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
