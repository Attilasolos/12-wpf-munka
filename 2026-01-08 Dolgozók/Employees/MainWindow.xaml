<Window x:Class="Employees.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees"
        mc:Ignorable="d"
        Title="Dolgozó nyilvántartás" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <!--<ListBox Name="lstEmployees" Margin="10" Grid.ColumnSpan="3"/>-->
        <DataGrid Name="dgEmployees" Margin="10" Grid.ColumnSpan="3" IsReadOnly="true" 
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Dolgozó neve" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Szül. dátum" Binding="{Binding Born, StringFormat=yyyy.MM.dd}" Width="120"/>
                <DataGridTextColumn Header="Osztály" Binding="{Binding Department}" Width="150"/>
                <DataGridTextColumn Header="Fizetés" Binding="{Binding Salary, StringFormat=# ### ##0 Ft}" Width="120"/>
                <DataGridCheckBoxColumn Header="Home office?" Binding="{Binding EnableHomeOffice}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnNew" Content="Új" Width="100" Height="25" 
                Grid.Row="1" Grid.Column="0" Click="btnNew_Click"/>
        <Button Name="btnModify" Content="Módosítás" Width="100" Height="25" 
                Grid.Row="1" Grid.Column="1" Click="btnModify_Click"/>
        <Button Name="btnDelete" Content="Törlés" Width="100" Height="25" 
                Grid.Row="1" Grid.Column="2" Click="btnDelete_Click"/>
    </Grid>
</Window>
