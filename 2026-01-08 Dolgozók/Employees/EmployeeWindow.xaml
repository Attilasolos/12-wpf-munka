<Window x:Class="Employees.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees"
        mc:Ignorable="d"
        Title="Dolgozók" Height="300" Width="500" MinHeight="280" MinWidth="400"
                         MaxHeight="400" MaxWidth="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Label Content="Dolgozó neve:" Grid.Row="0" VerticalAlignment="Center"/>
        <Label Content="Születési dátum:" Grid.Row="1" VerticalAlignment="Center"/>
        <Label Content="Osztály:" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Fizetés:" Grid.Row="3" VerticalAlignment="Center"/>
        <Label Content="Home office:" Grid.Row="4" VerticalAlignment="Center"/>
        <Label Content="Fénykép (URL):" Grid.Row="5" VerticalAlignment="Center"/>

        <TextBox Name="txtName" Grid.Column="1" Grid.Row="0"
                 Height="24" VerticalContentAlignment="Center"/>
        <DatePicker Name="dtpBorn" Grid.Column="1" Grid.Row="1"
                    Height="24" VerticalContentAlignment="Center" Width="120"
                    HorizontalAlignment="Left"/>
        <ComboBox Name="cboDepartment" Grid.Column="1" Grid.Row="2"
                  Height="24" VerticalContentAlignment="Center">
            <ComboBoxItem Content="IT"/>
            <ComboBoxItem Content="HR"/>
            <ComboBoxItem Content="Management"/>
            <ComboBoxItem Content="Logisztika"/>
        </ComboBox>
        <TextBox Name="txtSalary" Grid.Column="1" Grid.Row="3"
                 Height="24" VerticalContentAlignment="Center"/>
        <CheckBox Name="chbHomeOffice" Grid.Column="1" Grid.Row="4"
                  VerticalAlignment="Center"/>
        <TextBox Name="txtPhotoUrl" Grid.Column="1" Grid.Row="5"
                 Height="24" VerticalContentAlignment="Center"/>

        <WrapPanel Grid.Row="6" Grid.ColumnSpan="2" VerticalAlignment="Center"
                   HorizontalAlignment="Center">
            <Button Name="btnSave" Content="Mentés" Width="100" Height="25"
                    Margin="10 0 10 0" Click="btnSave_Click"/>
            <Button Name="btnCancel" Content="Mégsem" Width="100" Height="25"
                    Margin="10 0 10 0" Click="btnCancel_Click"/>
        </WrapPanel>
    </Grid>
</Window>
