<Window x:Class="Szavazogep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Szavazogep"
        mc:Ignorable="d"
        Title="Szavazógép" Height="450" Width="800" FontSize="24" 
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <GroupBox Header="Körzet" Margin="10,24,10,323">
            <WrapPanel VerticalAlignment="Center">
                <RadioButton Content="1" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="2" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="3" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="4" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="5" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="6" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="7" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
                <RadioButton Content="8" Margin="40,0,0,0" 
                             VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
            </WrapPanel>

        </GroupBox>
        <ListBox Name="lstNames" Margin="10,135,400,10"/>
        <Button Name="btnVote" Content="Szavazok" HorizontalAlignment="Left" Height="139" Margin="441,208,0,0" VerticalAlignment="Top" Width="320" Click="btnVote_Click"/>

    </Grid>
</Window>
